<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunVideoActivity">

    <Button
        android:id="@+id/btn_video1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Video 1"
        android:backgroundTint="#009688"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_video2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Video 2"
        android:backgroundTint="#E91E63"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_video1"
        app:layout_constraintStart_toStartOf="@+id/btn_video1"
        app:layout_constraintTop_toBottomOf="@+id/btn_video1" />

    <Button
        android:id="@+id/btn_video3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Video 3"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_video2"
        app:layout_constraintStart_toStartOf="@+id/btn_video2"
        app:layout_constraintTop_toBottomOf="@+id/btn_video2" />

    <Button
        android:id="@+id/btn_video4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Video 4"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_video3"
        app:layout_constraintStart_toStartOf="@+id/btn_video3"
        app:layout_constraintTop_toBottomOf="@+id/btn_video3" />
</androidx.constraintlayout.widget.ConstraintLayout>